        android:text="ALIMENTOS DE ORIGEN ANIMAL Y LEGUMINOSAS"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_margin="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="540dp"
        android:layout_height="245dp"
        android:id="@+id/btn_act4"
        android:text="EL PLATO DEL BIEN COMER"
        android:layout_gravity="left|bottom"
        android:background="@drawable/btngrupo4"
        android:textSize="70dp"
        android:textColor="#ffffff"
        android:layout_margin="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="540dp"
        android:layout_height="245dp"
        android:id="@+id/btn_act5"
        android:text="LA JARRA DEL BUEN BEBER"
        android:layout_gravity="right|bottom"
        android:background="@drawable/btngrupo5"
        android:textSize="70dp"
        android:textColor="#ffffff"
