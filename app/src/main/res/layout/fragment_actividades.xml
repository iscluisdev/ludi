<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoactiv"
    tools:context="com.ludi.tt_ludi.ActividadesFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="345dp"
        android:layout_height="325dp"
        android:id="@+id/btn_act1"
        android:layout_gravity="left|top"
        android:text="FRUTAS Y VERDURAS"
        android:background="@drawable/btngrupo1"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:layout_margin="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="345dp"
        android:layout_height="325dp"
        android:id="@+id/btn_act2"
        android:layout_gravity="center_horizontal|top"
        android:text="CEREALES Y TUBERCULOS"
        android:background="@drawable/btngrupo2"
        android:textSize="70dp"
        android:textColor="#ffffff"
        android:layout_margin="30dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="345dp"
        android:layout_height="325dp"
        android:id="@+id/btn_act3"
        android:background="@drawable/btngrupo3"
