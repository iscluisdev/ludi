<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoinicio"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ludi.tt_ludi.Inicio"

    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUDI"
        android:id="@+id/txtTittle"
        android:textSize="180dp"
        android:textColor="#ff8e38"
        android:paddingBottom="0dp"
        android:paddingTop="30dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="1146dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:weightSum="2"
        android:transitionGroup="false">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:background="@drawable/nino"
            android:id="@+id/imageView2"
            android:layout_weight="0.13"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:id="@+id/editTextUsuario"
            android:padding="10dp"
            android:background="#E0F7FA"
            android:paddingLeft="30dp"
            android:paddingTop="100dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            android:text="Nombre de usuario"
            android:textColor="#006064"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="30dp"
            android:layout_weight="1.44"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:width="1dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingBottom="10dp"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/inicio"
            android:id="@+id/imageView3"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="476dp"
            android:layout_height="wrap_content"
            android:text="INICIAR SESIÃ“N "
            android:id="@+id/btn_login"
            android:background="@drawable/shape"
            android:textColor="#006064"
            android:padding="20dp"
            android:paddingLeft="40dp"
            android:paddingTop="100dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_weight="1.65"
            android:layout_marginTop="20dp"
            android:width="1dp" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/registro"
            android:id="@+id/imageView4"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center" />

        <Button
            android:layout_width="476dp"
            android:layout_height="wrap_content"
            android:text="REGISTRATE"
            android:id="@+id/btn_register"
            android:background="@drawable/shape"
            android:textColor="#006064"
            android:padding="20dp"
            android:paddingLeft="40dp"
            android:paddingTop="100dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_weight="1.35" />


    </LinearLayout>









</LinearLayout>
