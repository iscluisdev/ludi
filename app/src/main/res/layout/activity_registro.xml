<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicio"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:orientation="vertical"
    tools:context="com.ludi.tt_ludi.Registro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTRATE"
        android:id="@+id/txtRegister"
        android:textSize="150dp"
        android:textColor="#ff8e38" />

    <LinearLayout
        android:layout_width="1182dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="118dp"
            android:layout_height="96dp"
            android:background="@drawable/nino" />

        <EditText
            android:layout_width="666dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserName"
            android:text="Usuario"
            android:layout_gravity="center"
            android:textColor="#006064" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="120dp">


    <EditText
        android:layout_width="666dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/editTextName"
        android:textColor="#006064" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/editTextDate"
        android:text="Edad"
        android:layout_gravity="center"
        android:textColor="#006064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="120dp">

    <EditText
        android:layout_width="666dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/editTextWeight"
        android:text="Peso"
        android:textColor="#006064" />

    <EditText
        android:layout_width="666dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/editTextHeight"
        android:text="Altura"
        android:textColor="#006064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="0dp">

        <Button
            android:layout_width="132dp"
            android:layout_height="104dp"
            android:background="@drawable/guardar"
            android:id="@+id/buttonRegister"
            android:layout_marginLeft="900dp" />

    </LinearLayout>






</LinearLayout>