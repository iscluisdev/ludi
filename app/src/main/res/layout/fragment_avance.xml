<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoactiv"
    tools:context="com.ludi.tt_ludi.AvanceFragment">




    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView5"
        android:background="@drawable/menu"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal">

        <!--Identificadores visuales de las actividades-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">


            <TextView
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:text="FRUTAS Y VERDURAS"
                android:background="@drawable/btngrupo1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:text="CEREALES Y TUBERCULOS"
                android:background="@drawable/btngrupo2"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:text="ALIMENTOS DE ORIGEN ANIMAL Y LEGUMINOSAS"
                android:background="@drawable/btngrupo3"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:text="EL PLATO DEL BIEN COMER"
                android:background="@drawable/btngrupo4"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="LA JARRA DEL BUEN BEBER"
                android:background="@drawable/btngrupo5"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

        </LinearLayout>


        <!--Estatus de las actividades-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NO"
                android:id="@+id/estado_act1"
                android:background="@drawable/paloma"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NO"
                android:id="@+id/estado_act2"
                android:background="@drawable/tache"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NO"
                android:id="@+id/estado_act3"
                android:background="@drawable/tache"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NO"
                android:id="@+id/estado_act4"
                android:background="@drawable/paloma"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="NO"
                android:id="@+id/estado_act5"
                android:background="@drawable/tache"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>
