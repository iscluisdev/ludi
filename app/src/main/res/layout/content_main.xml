<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/inicioapp"
    android:id="@+id/content_nav_drawer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ludi.tt_ludi.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="ACTIVIDADES"
        android:id="@+id/btnActividades"
        android:background="@drawable/btngrupo4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="60dp"
        android:layout_marginRight="100dp"
        android:textColor="#fdfdfd"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:text="NOTICIAS"
        android:id="@+id/btnNoticias"
        android:background="@drawable/btngrupo4"
        android:layout_alignBottom="@+id/btnActividades"
        android:layout_toEndOf="@+id/btnActividades"
        android:textSize="60dp"
        android:layout_marginRight="100dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="AVANCE"
        android:id="@+id/btnAvance"
        android:background="@drawable/btngrupo4"
        android:layout_alignTop="@+id/btnNoticias"
        android:layout_toEndOf="@+id/btnNoticias"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:layout_marginRight="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
