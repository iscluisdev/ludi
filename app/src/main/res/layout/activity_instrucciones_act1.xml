<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ludi.tt_ludi.InstruccionesAct1"
    android:weightSum="1"
    android:background="#efdf50"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTRUCCIONES"
        android:id="@+id/txtTittle"
        android:textSize="100dp"
        android:textColor="#ff8e38"
        android:paddingTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige la imagen con la respuesta correcta para llenar los niveles de la jarra del buen beber"
        android:id="@+id/txtIntruciones"
        android:textSize="25dp"
        android:textColor="#000000"
        android:paddingTop="30dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="615dp"
        android:layout_height="169dp"
        android:id="@+id/btn_ra"
        android:background="@drawable/play"
        android:layout_above="@+id/btn_comenzar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingBottom="100dp"
        android:layout_weight="0.96" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_regresar"
            android:background="@drawable/regreso"
            android:layout_marginRight="1000dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_comenzar"
            android:background="@drawable/inicio" />
    </LinearLayout>




</LinearLayout>
