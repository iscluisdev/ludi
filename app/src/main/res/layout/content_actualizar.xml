<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicio"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:orientation="vertical"
    tools:context="com.ludi.tt_ludi.Actualizar">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTRO"
        android:id="@+id/txtRegister"
        android:textSize="50dp"
        android:textColor="#ff8e38" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="120dp">


        <EditText
            android:layout_width="1153dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:id="@+id/editTextNombre"
            android:textColor="#006064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1182dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="118dp"
            android:layout_height="96dp"
            android:background="@drawable/usuario" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUsuario"
            android:text="Usuario"
            android:layout_gravity="center"
            android:textColor="#006064" />

    </LinearLayout>


   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="120dp">

        <EditText
            android:layout_width="1147dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/editTextPeso"
            android:text="Peso"
            android:textColor="#006064" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="numberDecimal"
           android:id="@+id/editTextEstatura"
           android:text="Estatura"
           android:textColor="#006064" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="numberDecimal"
           android:id="@+id/editTextEdad"
           android:text="Edad"
           android:textColor="#006064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1182dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="118dp"
            android:layout_height="96dp"
            android:background="@drawable/escuela" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextEscuela"
            android:text="Escuela"
            android:layout_gravity="center"
            android:textColor="#006064" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="0dp">

        <Button
            android:layout_width="132dp"
            android:layout_height="104dp"
            android:background="@drawable/guardar"
            android:id="@+id/buttonUpdate"
            android:layout_marginLeft="900dp" />

    </LinearLayout>








</LinearLayout>
