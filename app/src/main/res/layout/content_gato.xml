<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ludi.tt_ludi.Gato"
    android:gravity="center"
    tools:showIn="@layout/activity_gato">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal">

        <!--Primera fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="1"
                android:id="@+id/casilla1"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="2"
                android:id="@+id/casilla2"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="3"
                android:id="@+id/casilla3"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

        </LinearLayout>


        <!--Segunda fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="4"
                android:id="@+id/casilla4"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="5"
                android:id="@+id/casilla5"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="6"
                android:id="@+id/casilla6"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

        </LinearLayout>

        <!--Tercera fila-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="7"
                android:id="@+id/casilla7"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="8"
                android:id="@+id/casilla8"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="9"
                android:id="@+id/casilla9"
                android:background="@drawable/signo"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_margin="10px"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reiniciomem"
                android:id="@+id/btnReiniciar"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuestionario"
                android:id="@+id/btnCuestionario"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
